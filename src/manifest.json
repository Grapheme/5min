{
  "manifest_version": 2,
  "name": "fb5min",
  "version": "0.1",
  "description": "Экстеншин против прокрастинации.",

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs", 
    "*://*.vk.com/*", "*://*.facebook.com/*"
  ],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Это тултип!"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
      {
          "matches": ["*://*.vk.com/*", "*://*.facebook.com/*"],
          "js": [
            "scripts/vendor/jquery.min.js",
            "scripts/content.js"
          ]
      }
  ]
}